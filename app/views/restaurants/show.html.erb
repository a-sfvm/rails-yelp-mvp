
<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title"> <%= @restaurant.name %> </h3>
      </div>
      <div class="modal-body">
        <p><%= @restaurant.address %></p>
        <p><%= @restaurant.category %></p>
        <p><%= @restaurant.phone_number %></p>

      </div>
      <div class="modal-body">
        <h4>Reviews:</h4>
        <% @restaurant.reviews.each do |restaurant| %>
          <hr />
          <p>
            <% restaurant.rating.times do %>
              <i class="fa-solid fa-star text-warning"></i>
            <% end %>
            <% (5 - restaurant.rating).times do %>
              <i class="fa-regular fa-star text-warning"></i>
            <% end %>
          </p>
           <p> <em> - <%= restaurant.content %> </em> </p>
        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-warning" data-bs-dismiss="modal"><%= link_to "Back to Restaurant's list", restaurants_path %></button>
        <button type="button" class="btn btn-outline-warning" data-bs-dismiss="modal"><%= link_to "Add a Review", new_restaurant_review_path(@restaurant.id) %></button>
      </div>
    </div>
  </div>
